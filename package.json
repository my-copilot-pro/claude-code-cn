{
  "name": "claude-code-cn",
  "displayName": "Claude Code 中文版",
  "description": "最强大、最优雅的 Claude Code（带交互界面）",
  "version": "1.0.2",
  "publisher": "zhukunpeng",
  "engines": {
    "vscode": "^1.98.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "icon": "resources/claude-logo.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.cjs",
  "contributes": {
    "configuration": {
      "title": "Claude Code 中文版",
      "properties": {
        "claudecodecn.selectedModel": {
          "type": "string",
          "default": "default",
          "description": "The AI model for Claude Code"
        },
        "claudecodecn.environmentVariables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Environment variable name"
              },
              "value": {
                "type": "string",
                "description": "Environment variable value"
              }
            },
            "required": [
              "name",
              "value"
            ]
          },
          "default": [],
          "description": "Environment variables to set when launching Claude"
        },
        "claudecodecn.providers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Provider unique ID"
              },
              "name": {
                "type": "string",
                "description": "Provider name"
              },
              "websiteUrl": {
                "type": "string",
                "description": "Provider website URL"
              },
              "apiKey": {
                "type": "string",
                "description": "API Key"
              },
              "baseUrl": {
                "type": "string",
                "description": "API base URL"
              },
              "mainModel": {
                "type": "string",
                "description": "Main model"
              },
              "haikuModel": {
                "type": "string",
                "description": "Haiku model"
              },
              "isPreset": {
                "type": "boolean",
                "description": "Is preset provider"
              },
              "isActive": {
                "type": "boolean",
                "description": "Is active provider"
              }
            },
            "required": [
              "id",
              "name",
              "apiKey",
              "baseUrl"
            ]
          },
          "default": [],
          "description": "Claude API providers configuration"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claudecodecn-chat-sidebar",
          "title": "Claude Code 中文版",
          "icon": "resources/claude-logo.svg"
        }
      ]
    },
    "views": {
      "claudecodecn-chat-sidebar": [
        {
          "icon": "resources/claude-logo.svg",
          "type": "webview",
          "id": "claudecodecn.chatView",
          "name": "Claude Code 中文版"
        }
      ]
    },
    "commands": [
      {
        "command": "claudecodecn.showChat",
        "title": "Show Claude Code 中文版"
      }
    ]
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:webview\" \"pnpm run watch:extension\"",
    "dev:webview": "vite --config src/webview/vite.config.ts --port 5173 --strictPort",
    "build:extension": "tsx esbuild.ts --production",
    "build:webview": "vite build --config src/webview/vite.config.ts",
    "build": "pnpm run build:webview && pnpm run build:extension",
    "watch:extension": "tsx esbuild.ts --watch",
    "watch:webview": "vite build --config src/webview/vite.config.ts --watch",
    "watch": "concurrently \"pnpm run watch:extension\" \"pnpm run watch:webview\"",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:webview": "vue-tsc -p src/webview/tsconfig.json --noEmit",
    "typecheck:all": "pnpm run typecheck && pnpm run typecheck:webview",
    "package": "vsce package --no-dependencies",
    "pack": "pnpm build && pnpm package",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,vue}\" && eslint src --ext ts,tsx,vue --fix"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.19.0",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vscode/vsce": "^3.7.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-svg-icons": "^2.0.1",
    "vitest": "^4.0.8",
    "vue-tsc": "^3.1.3"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.37",
    "@anthropic-ai/sdk": "^0.68.0",
    "@gn8/alien-signals-vue": "^0.1.1",
    "@mdi/font": "^7.4.47",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@vscode/codicons": "^0.0.41",
    "@vueuse/core": "^14.0.0",
    "alien-signals": "^3.1.0",
    "marked": "^17.0.0",
    "motion-v": "^1.7.4",
    "path-browserify-esm": "^1.0.6",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "zod": "^3.25.76"
  },
  "keywords": [
    "claude code",
    "claudecode",
    "claude code cn",
    "claudecode中文版",
    "claude code中文版",
    "codex",
    "vscode",
    "extension",
    "claude",
    "cc",
    "ai",
    "coding-assistant"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zhukunpenglinyutong/mintlify-docs"
  },
  "license": "AGPL-3.0"
}
